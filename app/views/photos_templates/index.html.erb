<h1> List of Photos </h1>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Caption
    </th>

    <th>
      Owner
    </th>

    <th>
      Posted
    </th>

    <td>
    </td>
  </tr>

<% @list_of_photos.each do |a_photo| %>

 <tr>
      <td>
        <img src="<%= a_photo.image%>" height="300px">
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
        <%= a_photo.poster.username%>
      </td>

      <td>
        <%= a_photo.created_at%>
      </td>

      <td>
        <a href="<%= a_photo.id%>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
